<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".application_page">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"

        android:text="신청 정보"
        android:textColor="#7A7979"
        android:textSize="25dp" />
    <View
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:background="#C6C6C6" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/division_line"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="보조기구"
                        android:textSize="28dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="보조기구 이름"
                        android:background="@drawable/application_border"
                        android:padding="7dp"
                        android:textSize="21dp"
                        android:id="@+id/deviceName"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="수령인"
                        android:textSize="30dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="너나드리"
                        android:background="@drawable/application_input_border"
                        android:padding="7dp"
                        android:textSize="21dp"
                        android:id="@+id/name"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="전화번호"
                        android:textSize="28dp"/>
                    <EditText
                        android:id="@+id/phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/application_input_border"
                        android:padding="7dp"
                        android:text="123456789"
                        android:textSize="21dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/division_line"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="대여일시"
                        android:textSize="28dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/year"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:background="@drawable/application_input_border"
                            android:layout_height="48dp"
                            android:digits="0987654321"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="년 "
                            android:textSize="28dp"/>
                        <EditText
                            android:id="@+id/month"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="50dp"
                            android:background="@drawable/application_input_border"
                            android:layout_height="48dp"
                            android:digits="0987654321"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="월 "
                            android:textSize="28dp"/>
                        <EditText
                            android:id="@+id/day"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="50dp"
                            android:background="@drawable/application_input_border"
                            android:layout_height="48dp"
                            android:digits="0987654321"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="일"
                            android:textSize="28dp"/>
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="수령시간"
                        android:textSize="28dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/hour"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:background="@drawable/application_input_border"
                            android:layout_height="48dp"
                            android:digits="0987654321"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="시"
                            android:textSize="28dp"/>
                        <EditText
                            android:id="@+id/minute"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:background="@drawable/application_input_border"
                            android:layout_height="48dp"
                            android:digits="0987654321"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="분"
                            android:textSize="28dp"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="신청"
        android:id="@+id/applicationBtn"
        android:layout_margin="5dp"
        android:background="@drawable/reverse_button_layout"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"/>

</LinearLayout>