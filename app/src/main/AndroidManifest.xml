<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neonadeuri.devices_rental_application">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DevicesRentalApplication">
        <activity
            android:name=".application_status"
            android:exported="false" />
        <activity
            android:name=".application_page"
            android:exported="false" />
        <activity
            android:name=".device_detail"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false">

        </activity>
        <activity
            android:name=".myPageActivity"
            android:exported="true" />
        <activity
            android:name=".myPageEditActivity"
            android:exported="true" />
    </application>

</manifest>